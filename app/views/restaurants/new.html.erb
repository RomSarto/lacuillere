<h1>Create a new restaurant</h1>

<%= simple_form_for(@restaurant) do |f| %>
  <%= f.error_notification %>

  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :category %>
  <%= f.input :category, collection: ["chinese", "italian", "japanese", "french", "belgian"], prompt: "Select category" %>
  <%= f.input :phone_number %>

  <%= f.button :submit %>
<% end %>
